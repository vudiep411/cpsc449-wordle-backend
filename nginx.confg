upstream backend {
	server 127.0.0.1:5000;
	server 127.0.0.1:5001;
	server 127.0.0.1:5002;
}

server {
      	listen 80;
      	listen [::]:80;

      	server_name tuffix-vm;

      	location / {
		auth_request /auth;
		proxy_pass http://backend;
      	}

	location = /auth {
		proxy_pass http://127.0.0.1:5100/user/login;
	}

	location /register {
		proxy_pass http://127.0.0.1:5100/user/register;
	}
}
